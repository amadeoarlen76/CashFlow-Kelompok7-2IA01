<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kelompok7.cashflow">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_cashflow"
        android:roundIcon="@mipmap/ic_launcher_cashflow"
        android:label="@string/label_app"
        android:theme="@style/AppTheme">

        <activity
            android:name=".HomeActivity"
            android:label="@string/label_activity_home"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity
            android:name=".AddActivity"
            android:label=""/>

        <activity
            android:name=".EditActivity"
            android:label=""/>

        <activity
            android:name=".FilterActivity"
            android:label="@string/label_activity_filter"/>

        <activity
            android:name=".SplashScreenActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>
</manifest>
